<h1><%= @task.title %></h1>

<p><%= @task.details %></p>


<% if @task.completed %>
    <p>&#10004;</p>
    <p>Done</p>
<% else %>
    <p>&#9744;</p>
    <p>Not Done</p>
<% end %>



<p><%= link_to 'Back to task list' , tasks_path %></p>
<p><%= link_to 'Edit Task' , edit_path %></p>
<%= link_to 'Delete Task', task_path(@task), :method => :delete, :confirm => "You sure?"%>
